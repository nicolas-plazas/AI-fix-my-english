---
import Layout from '../layouts/Layout.astro';
import FixStatus from '../components/FixStatus';
import TextArea from '../components/TextArea';
import CopyBtn from '../components/CopyBtn';
import FixItBtn from '../components/FixItBtn';
---

<Layout title='Fix Text'>
	<main
		class='flex flex-col justify-center items-center w-full min-h-screen py-4 bg-[#f4f6fa]'
	>
		<h1 class='my-6 md:mb-16 text-2xl md:text-4xl text-gray-700 font-bold'>
			Correct your english ðŸ‡ºðŸ‡¸
		</h1>
		<form
			class='flex flex-col justify-center items-center w-11/12 max-w-3xl p-2 md:p-6 bg-white rounded-3xl shadow-xl'
		>
			<FixStatus client:load />
			<div class='flex flex-col gap-3 md:flex-row w-full'>
				{/* Text area */}
				<TextArea id='editable-input' placeholder='Write here!' client:load />
				<div class="relative w-full h-full">
					<TextArea id='result-input' isReadOnly placeholder='Result here!' client:load />
					{/* Copy button */}
					<CopyBtn client:load />
				</div>
			</div>
			<FixItBtn client:load />
		</form>
	</main>
</Layout>
